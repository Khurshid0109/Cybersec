<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cybersec</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/mystyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ErrorPage.css" asp-append-version="true" />
</head>
<body>

    <!--Header part-->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!--For adjust items for mobile devices-->
                <button id="modal" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!--Mobile navbar start-->
                <div class="mobile-nav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Asosiy">Asosiy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Kiber_hujumlar">Kiber Hujumlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Uzbekistan">Uzbekistan</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Zaifliklar">Zaifliklar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Viruslar">Viruslar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Malumotlar_tarqalishi">Malumotlar tarqalishi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Boshqa">Boshqa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-magnifying-glass"></i></a>
                        </li>
                    </ul>
                </div>
                <!--Mobile navbar end-->
                <div class="collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Asosiy">Asosiy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Kiber_hujumlar">Kiber Hujumlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Uzbekistan">Uzbekistan</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Zaifliklar">Zaifliklar</a>
                        </li>
                    </ul>
                </div>

                <!--For brand icon-->
                <div class="ms-auto d-flex align-items-center">
                    <img src="~/Images/logo.jpg" asp-append-version="true" style="width:30px; height:30px; border-radius:50%;" />
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="">Cybersec Blog</a>
                </div>

                <div class="collapse d-sm-inline-flex justify-content-between ms-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Viruslar">Viruslar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Malumotlar_tarqalishi">Malumotlar tarqalishi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Boshqa">Boshqa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-magnifying-glass"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!--Main part-->
    <div class="container">
        <main role="main" class="pb-3 ">
            @RenderBody()
        </main>
    </div>

    <!--Footer part-->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col col-md-3"> 
                    <h4>Categories</h4>
                    <ul>
                        <li><a class=" text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Asosiy">Asosiy</a></li>
                        <li><a class=" text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Kiber_hujumlar">Kiber Hujumlar</a></li>
                        <li><a class=" text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Uzbekistan">Uzbekistan</a></li>
                        <li><a class=" text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Zaifliklar">Zaifliklar</a></li>
                    </ul>
                </div>

                <div class="footer-col col-md-3">
                    <h4>Categories</h4>
                    <ul>
                        <li><a class=" text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Asosiy">Asosiy</a></li>
                        <li><a class=" text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Kiber_hujumlar">Kiber Hujumlar</a></li>
                        <li><a class=" text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Uzbekistan">Uzbekistan</a></li>
                        <li><a class=" text-white" asp-area="" asp-controller="Home" asp-action="Index" asp-route-category="Zaifliklar">Zaifliklar</a></li>
                    </ul>
                </div>
                
                <div class="footer-col col-md-3">
                    <h4>About Us</h4>
                    <p class="text-white">Some information about us...</p>
                </div>

                <div class="footer-col col-md-3">
                    <h4>Follow Us</h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i> </a>
                        <a href="#"><i class="fab fa-twitter"></i> </a>
                        <a href="#"><i class="fab fa-instagram"></i> </a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
       let modal = document.getElementById('modal');
       modal.addEventListener('click', function () {
            document.getElementsByClassName('mobile-nav')[0].classList.toggle('active')
           
       });
    </script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
