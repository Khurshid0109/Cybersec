@using Cybersec.Service.DTOs.Users
@model UserPostModel;
@{
    Layout = null;
    ViewData["Title"] = "Register page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true">
</head>
<body>
    
    <div class="wrapper">
        <div class="form-wrapper sign-up">
            <form asp-controller="access" asp-action="Register" method="post" enctype="multipart/form-data">
                <h2>Register</h2>
                <div class="input-group">
                    <input asp-for="FirstName" type="text" required>
                    <label asp-for="FirstName" >FirstName</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="input-group">
                    <input asp-for="LastName" type="text" required>
                    <label asp-for="LastName" >LastName</label>
                    <span asp-validation-for="LastName" class="validation"></span>
                </div>
                 <div class="input-group">
                    <input asp-for="Email" id="emailInput" readonly>
                    <label asp-for="Email" id="label">Email</label>
                    <span asp-validation-for="Email" class="validation"></span>
                </div>
                <div class="input-group">
                    <input asp-for="Password" type="password" required>
                    <label asp-for="Password" >Password</label>
                    <span asp-validation-for="Password" class="validation"></span>
                </div>
                <div class="remember">
                    <label><input type="checkbox"> I agree to the terms and conditions</label>
                </div>
                <button type="submit">Register</button>
                <div class="signUp-link">
                    <p>Already have an account? <a href="/Access/Login" class="signInBtn-link">LogIn now</a></p>
                </div>
            </form>
        </div>
    </div>
    <script>
        let email = localStorage.getItem("email");

        document.getElementById('emailInput').value = email;

        if (document.getElementById('emailInput').value) {
            document.getElementById('label').classList.add('active')
        }
    </script>
</body>
</html>
