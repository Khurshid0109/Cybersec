@using Cybersec.Service.DTOs.Auth
@model LoginPostModel
@{
    Layout = null;
} 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true">
</head>
<body>
    <div class="wrapper">
        <div class="form-wrapper sign-in">

            <form asp-controller="access" asp-action="Login" method="post" enctype="multipart/form-data">

                <h2>Login</h2>
                <div class="input-group">
                    <input asp-for="Email" id="emailInput"  readonly>
                    <label asp-for="Email" id="label" >Email</label>
                    <span asp-validation-for="Email" class="validation"></span>
                </div>
                <div class="input-group">
                    <input asp-for="Password" id="pass" type="password" required>
                    <label asp-for="Password" id="pasl" >Password</label>
                    <span asp-validation-for="Password" class="validation"></span>
                </div>
                <div class="remember">
                    <label><input type="checkbox">Rememeber me</label>
                </div>
                <button type="submit">Login</button>
                <div class="signUp-link">
                    <p>Don't have an account? <a href="/Access/Register" class="signUpBtn-link">Register now!</a></p>
                </div>
            </form>
        </div>
    </div>
    <script>
        let email = localStorage.getItem("email");

        document.getElementById('emailInput').value = email;

        // input check label

        if (document.getElementById('emailInput').value) {
            document.getElementById('label').classList.add('active')
        }
        if (document.getElementById('pass').value) {
            document.getElementById('pasl').classList.add('active')
        }
    </script>
</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}