@model AdminSettingsModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Settings";
    var id = ViewBag.Id;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="~/css/Card.css">
</head>
<body>
    <div class="report-container">
        <!-- Change Lastname,Firstname,Image form -->
        <form asp-controller="Admin" asp-action="AdminNameSettings" asp-route-id="@id" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="ImageUrl">Profile Image:</label>
                <input asp-for="ImageUrl" type="file" class="form-control"  >
                <span asp-validation-for="ImageUrl" class="validation"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName">Full Name:</label>
                <input asp-for="FullName" type="text" class="form-control" placeholder="Enter your full name">
                <span asp-validation-for="FullName" class="validation"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-wide">Save</button>
        </form>

        <hr />

        <!-- Change email form -->
        <form asp-controller="Home" asp-action="Settings" method="get">
            <div class="form-group">
                <label for="email">Change Email:</label>
                <input type="email" class="form-control" placeholder="Enter your new email">
            </div>
            <button type="submit" class="btn btn-secondary btn-wide">Submit</button>
        </form>

        <!-- Change password form -->
        <form asp-controller="Home" asp-action="Settings" method="get">
            <div class="form-group">
                <label for="email">Change Password:</label>
                <input type="email" class="form-control"  placeholder="Enter your new password.">
            </div>
            <div class="form-group">
                <label for="email">Change Password:</label>
                <input type="email" class="form-control"  placeholder="Enter your password.">
            </div>
            <button type="submit" class="btn btn-secondary btn-wide">Submit</button>
        </form>

    </div>
</body>
</html>