@model UserByAdminPutModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "EditUser";
    var id = ViewBag.Id;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="~/css/AddCart.css">
</head>
<body>
    <div class="card-container">
        <h2>New User</h2>

        <div class="form-container">
            <form asp-action="EditUserData" asp-controller="User" asp-route-id="@id" method="Post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FirstName">FirstName</label>
                    <input asp-for="FirstName" type="text" id="fullname" required value="@Model.FirstName">
                    <span asp-validation-for="FirstName" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName">LastName</label>
                    <input asp-for="LastName" type="text" id="fullname" required value="@Model.LastName">
                    <span asp-validation-for="LastName" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="text" id="email" required value="@Model.Email">
                    <span asp-validation-for="Email" class="validation"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="text" id="password" required">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Upload Profile Picture</label>
                    <input asp-for="ImageUrl" type="file" id="profilePicture" accept=".jpg,.jpeg,.png" onchange="showFileName(event)">
                    <span asp-validation-for="ImageUrl" class="validation"></span>
                    <!-- Display the file name -->
                    <span id="file-name"></span>
                </div>
                <!-- New Status Form Group -->
                <div class="form-group">
                    <label asp-for="Status">Status</label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" id="status" required>
                        <option value="">Select Status</option>
                    </select>
                    <span asp-validation-for="Status" class="validation"></span>
                </div>
                <button type="submit">Edit User</button>
            </form>
        </div>
    </div>

    <script>
        function showFileName(event) {
            const fileInput = event.target;
            const fileNameDisplay = document.getElementById('file-name');

            if (fileInput.files.length > 0) {
                fileNameDisplay.textContent = "Selected file: " + fileInput.files[0].name;
                fileNameDisplay.style.display = 'block';
            } else {
                fileNameDisplay.style.display = 'none';
            }
        }
    </script>
</body>
</html>